{
  "name": "opencode-block-destructive-commands",
  "version": "1.0.0",
  "description": "OpenCode hook to block destructive file deletion commands",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "build": "bun build src/index.ts --compile --outfile dist/opencode-block-destructive-commands",
    "build:linux": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/opencode-block-destructive-commands-linux",
    "build:macos": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/opencode-block-destructive-commands-macos",
    "build:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/opencode-block-destructive-commands-windows.exe",
    "build:all": "bun run build:linux && bun run build:macos && bun run build:windows"
  },
  "keywords": ["opencode", "hook", "safety", "trash"],
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest"
  }
}
